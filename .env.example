# Environment
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com

# Encryption key for wallet storage (generate with: openssl rand -hex 32)
WALLET_ENCRYPTION_KEY=

# Agent defaults
DEFAULT_SPENDING_LIMIT_SOL=1.0
DEFAULT_TX_COOLDOWN_MS=5000
DEFAULT_MAX_TX_PER_HOUR=20

# Optional: OpenAI API key for LLM-enhanced NLP (pattern matching works without it)
OPENAI_API_KEY=

# Logging
LOG_LEVEL=info
LOG_FILE=logs/agent-wallet.log
